@model MesJolisCotillons.ViewModels.CustomerAccountViewModel


<div class="form-row">
    <div class="form-group col-md-6">
        <label>Nom</label>
        <input type="text" class="form-control" name="lastname" placeholder="Nom" value="@Model.LastName">
    </div>
    <div class="form-group col-md-6">
        <label>Prénom</label>
        <input type="text" class="form-control" name="firstname" placeholder="Prénom" value="@Model.FirstName">
    </div>
</div>
<div class="form-group">
    <label>Adresse</label>
    <input type="text" class="form-control" name="address" placeholder="Numéro et nom avenue / rue" value="@Model.Address">
</div>
<div class="form-row">
    <div class="form-group col-md-6">
        <label>Ville</label>
        <input type="text" class="form-control" name="city" placeholder="Ville" value="@Model.City">
    </div>

    <div class="form-group col-md-4">
        <label>Code Postal</label>
        <input type="text" class="form-control" name="zipCode" placeholder="Code Postal" value="@Model.ZipCode">
    </div>
</div>
<div class="form-group w-50">
    <label>Pays</label>
    <select class="custom-select" name="Country">
        <option selected>@Model.Country</option>
        @foreach (var item in Model.Country_Set)
        {
            if (Model.Country != item.Name)
            {
                <option value="@item.Country_FK" >@item.Name</option>
            }
        }
    </select>
</div>