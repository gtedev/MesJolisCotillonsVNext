
@{
    var returnUrl = Request.QueryString["ReturnUrl"];

    var actionUrl = "/Login/LoginView";
    if (returnUrl != null)
    {
        actionUrl += "?ReturnUrl=" + returnUrl;
        actionUrl = Html.Encode(actionUrl);
    }
}

<div class="loginContainer">
    <div class="loginArea d-none d-md-flex">
        <div id="userForm" class="userForm">
            <div class="userFormTitle">Connexion</div>
            <form class="loginForm" method="post" action="@actionUrl">
                <div class="userTexfield"><input type="text" class="eMailInput" name="eMail" placeholder="Email" /></div>
                <div class="userTexfield"><input type="password" class="passwordInput" name="password" placeholder="Mot de passe" /></div>
                <input name="Save" type="button" class="loginSubmitButton greenSubmitButton" value="Se connecter" />

                <div class="centuryFont smallFontSize loginText">
                    <a href="/Login/InscriptionFormView">Inscription ici</a> -
                    <a href="/Login/PasswordForgottenView">Mot de passe oublié?</a>
                </div>
            </form>

        </div>
    </div>

    <div id="userForm" class="userForm userForm-responsive d-block p-0 d-md-none">
        <div class="userFormTitle">Connexion</div>
        <form class="loginForm" method="post" action="@actionUrl">
            <div class="userTexfield"><input type="text" class="eMailInput" name="eMail" placeholder="Email" /></div>
            <div class="userTexfield"><input type="password" class="passwordInput" name="password" placeholder="Mot de passe" /></div>
            <input name="Save" type="button" class="loginSubmitButton greenSubmitButton" value="Se connecter" />

            <div class="centuryFont smallFontSize loginText">
                <a href="/Login/InscriptionFormView">Inscription ici</a> -
                <a href="/Login/PasswordForgottenView">Mot de passe oublié?</a>
            </div>
        </form>
    </div>
</div>

<script defer>

    $(function () {
        Mjc.user.runLoginUtilities();
    });

</script>